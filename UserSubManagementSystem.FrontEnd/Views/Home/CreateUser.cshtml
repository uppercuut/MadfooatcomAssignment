
@{
    ViewBag.Title = "Create User";
}

<h2>Create User</h2>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">@(Request.QueryString["Success"] == "True" ? "Success" : "Error ")</h4>
            </div>
            <div class="modal-body">
                @(Request.QueryString["Success"] == "True" ? "Success,User Has been Created." : "Error ,Please properly fill the Information required.")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" id="reload">Close</button>
                <button type="button" class="btn" id="HomeNav">Go To Users List</button>
            </div>
        </div>
    </div>
</div>


@if (Request.QueryString["Success"] == "True")
{
    <script>
        $('#myModal').modal();
    </script>
}
else if (Request.QueryString["Success"] == "False")
{
    <script>
        $('#myModal').modal();
    </script>
}

<form method="post" action="/home/AddUserAsync">
    <div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Name</label>
                <input type="text" class="form-control" required id="inputEmddail4" name="Name" placeholder="Name">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Email</label>
                <input type="email" class="form-control" required name="Email" id="inputPasdsword4" placeholder="E-mail">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Mobile</label>
                <input type="tel" class="form-control" required id="inputEdmail4" name="Mobile" placeholder="Mobile">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Birth Date</label>
                <input type="text" class="form-control" id="brithDate" name="DateOfBirth" placeholder="Birth Date">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="inputAddress">Country</label>
                <input type="text" class="form-control" required name="Country" id="Country" placeholder="Country">
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="inputAddress">City</label>
                    <input type="text" class="form-control" name="City" required id="City" placeholder="City">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="inputAddress">Street</label>
                    <input type="text" class="form-control" name="Street" id="Street" placeholder="Street">
                </div>
            </div>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
    <input id="TimeStamp" type="hidden" name="TimeStamp" value="@DateTime.Now" />
    <input id="SdrCode" type="hidden" name="SdrCode" value="@(new Random().Next())" />

</form>


<script>
    $(function () {
        $('#brithDate').datepicker({
            format: 'mm/dd/yyyy',
        });

        $("#HomeNav").click(function () {
            window.location = "/";
        })

        $("#reload").click(function () {
            window.location = "/Home/CreateUser";
        })
    })



</script>



